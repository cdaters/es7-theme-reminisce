<theme defaultView="detailed" defaultTransition="fade &amp; slide">
  <formatVersion>7</formatVersion>
  <view name="detailed">
    <image name="scanlines" extra="true">
      <path ifSubset="scanlines:No scanlines"/>
      <path ifSubset="scanlines:Light scanlines">./../art/common/scanlines.png</path>
      <path ifSubset="scanlines:Dark scanlines">./../art/common/darkscanlines.png</path>
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <zIndex>10</zIndex>
    </image>
    <!-- Move these default items off screen... START -->
    <text name="md_lbl_genre, md_genre, md_lbl_rating, md_rating, md_lbl_releasedate, md_releasedate, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_developer, md_lbl_publisher">
      <pos>2</pos>
      <visible>false</visible>
    </text>
    <image name="md_image">
      <pos>2</pos>
      <visible>false</visible>
    </image>
    <!-- Move these default items off screen... END -->
    <!-- Added 20241021 -->
    <image name="backgroundBack" extra="true">
      <path>./../art/backgrounds/_default.jpg</path>
      <path>./../art/backgrounds/${system.theme}.jpg</path>
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <zIndex>0</zIndex>
    </image>
    <image ifSubset="gamelistArt:Off" name="backgroundDefault" extra="true">
      <path>./../art/backgrounds/_default.jpg</path>
      <path>./../art/backgrounds/${system.theme}.jpg</path>
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <zIndex>1</zIndex>
    </image>
    <image name="background2" extra="true">
      <path>./../art/views/overlay_detailed.png</path>
      <size>1 1</size>
      <pos>0 0</pos>
      <origin>0 0</origin>
      <zIndex>11</zIndex>
    </image>
    <image name="logo">
      <origin>0 1</origin>
      <pos>0.046875 0.2037037037</pos>
      <maxSize>0.1661458333 0.160185185185185</maxSize>
    </image>
    <text name="logoText">
      <origin>0 0</origin>
      <pos>0.056 0.008</pos>
      <size>0.16875 0.215740740740741</size>
      <fontSize>0.035</fontSize>
      <lineSpacing>1</lineSpacing>
      <fontPath>./../fonts/Inter-Regular.ttf</fontPath>
      <alignment>left</alignment>
      <forceUppercase>false</forceUppercase>
      <color>f1f1f1</color>
    </text>
    <textlist name="gamelist">
      <pos>0.0525 0.274037037</pos>
      <size>0.1979166667 0.5185185185</size>
      <selectorColor>${systemColor}</selectorColor>
      <selectorImagePath>./../art/views/gamelist_selectorbar.png</selectorImagePath>
      <selectedColor>${systemSelected}</selectedColor>
      <primaryColor>959595</primaryColor>
      <secondaryColor>959595</secondaryColor>
      <fontPath>./../fonts/Inter-Medium.ttf</fontPath>
      <fontSize>0.0222222222</fontSize>
      <alignment>left</alignment>
      <horizontalMargin>0.01</horizontalMargin>
      <selectorHeight>0.046296296296296</selectorHeight>
      <lines>11</lines>
      <lineSpacing>2.2</lineSpacing>
      <scrollSound>./../sound/cursor.wav</scrollSound>
    </textlist>
    <image name="primaryBtn" extra="true">
      <linearSmooth>true</linearSmooth>
      <origin>0 0.5</origin>
      <pos>0.3333333333 0.8888888889</pos>
      <size>0.09375 0.0555555556</size>
      <zIndex>100</zIndex>
    </image>
    <image name="selectTxt" extra="true">
      <linearSmooth>true</linearSmooth>
      <origin>0 0.5</origin>
      <pos>0.3333333333 0.8888888889</pos>
      <size>0.09375 0.0555555556</size>
      <path>./../art/common/selectTxt.png</path>
      <zIndex>100</zIndex>
    </image>
    <image name="secondaryBtnBack" extra="true">
      <!-- <linearSmooth>true</linearSmooth> -->
      <origin>0 0.5</origin>
      <pos>0.046875 0.8888888889</pos>
      <size>0.0625 0.037037037</size>
      <zIndex>100</zIndex>
    </image>
    <image name="backTxt" extra="true">
      <origin>0 0.5</origin>
      <pos>0.046875 0.8888888889</pos>
      <size>0.0625 0.037037037</size>
      <path>./../art/common/backTxt.png</path>
      <zIndex>100</zIndex>
    </image>
    <image name="secondaryBtnMenu" extra="true">
      <!-- <linearSmooth>true</linearSmooth> -->
      <origin>0 0.5</origin>
      <pos>0.1197916667 0.8888888889</pos>
      <size>0.0625 0.037037037</size>
      <zIndex>100</zIndex>
    </image>
    <image name="menuTxt" extra="true">
      <origin>0 0.5</origin>
      <pos>0.1197916667 0.8888888889</pos>
      <size>0.0625 0.037037037</size>
      <path>./../art/common/menuTxt.png</path>
      <zIndex>100</zIndex>
    </image>
    <image name="secondaryBtnOptions" extra="true">
      <!-- <linearSmooth>true</linearSmooth> -->
      <origin>0 0.5</origin>
      <pos>0.1927083333 0.8888888889</pos>
      <size>0.0625 0.037037037</size>
      <zIndex>100</zIndex>
    </image>
    <image name="optionsTxt" extra="true">
      <origin>0 0.5</origin>
      <pos>0.1927083333 0.8888888889</pos>
      <size>0.0625 0.037037037</size>
      <path>./../art/common/optionsTxt.png</path>
      <zIndex>100</zIndex>
    </image>
    <image name="md_marquee">
      <pos>0.3333333333 0.55555556</pos>
      <origin>0 1</origin>
      <maxSize>0.20 0.15</maxSize>
      <zIndex>100</zIndex>
    </image>
    <rating name="md_rating">
      <pos>-3 -3</pos>
    </rating>
   	<image name="md_thumbnail">
	  <maxSize>0.1 0.25925926</maxSize>
	  <pos>0.33333333 0.83333333</pos>
	  <origin>0 1</origin>
	  <default>./_inc/art/common/missingArtwork.png</default>
	  <linearSmooth>true</linearSmooth>
	  <zIndex>99</zIndex>
	</image>
    <text name="meta-genreReleaseyearPlayers" extra="true">
      <text>{game:genre}  |  {game:releaseyear}  |  {game:players} player</text>
      <pos>0.44791667 0.595</pos>
      <size>0.372 0.027777777777778</size>
      <backgroundColor>00000000</backgroundColor>
      <color>e3e2e6</color>
      <fontPath>./../fonts/Inter-Medium.ttf</fontPath>
      <fontSize>0.0166666667</fontSize>
      <alignment>left</alignment>
      <zIndex>50</zIndex>
    </text>
    <text name="publisherLbl" extra="true">
      <origin>0 0</origin>
      <pos>0.44791667 0.78</pos>
      <size>0.0625 0.027777777777778</size>
      <color>43474e</color>
      <fontSize>0.0166666667</fontSize>
      <fontPath>./../fonts/Inter-Medium.ttf</fontPath>
      <alignment>left</alignment>
      <text>Publisher</text>
      <zIndex>50</zIndex>
    </text>
    <text name="md_publisher">
      <pos>0.44791667 0.812962963</pos>
      <size>0.0625 0.027777777777778</size>
      <color>e3e2e6</color>
      <fontSize>0.0166666667</fontSize>
      <fontPath>./../fonts/Inter-Medium.ttf</fontPath>
      <alignment>left</alignment>
    </text>
    <text name="developerLbl" extra="true">
      <text>Developer</text>
      <pos>0.52083334 0.78</pos>
      <size>0.0625 0.027777777777778</size>
      <color>43474e</color>
      <fontSize>0.0166666667</fontSize>
      <fontPath>./../fonts/Inter-Medium.ttf</fontPath>
      <alignment>left</alignment>
      <zIndex>50</zIndex>
    </text>
    <text name="md_developer">
      <pos>0.52083334 0.812962963</pos>
      <size>0.0625 0.027777777777778</size>
      <color>e3e2e6</color>
      <fontSize>0.0166666667</fontSize>
      <fontPath>./../fonts/Inter-Medium.ttf</fontPath>
      <alignment>left</alignment>
    </text>
    <text name="md_description">
      <color>e3e2e6</color>
      <fontPath>./../fonts/Inter-Regular.ttf</fontPath>
      <fontSize>0.0166666667</fontSize>
      <alignment>left</alignment>
      <size>0.375 0.12</size>
      <pos>0.44791667 0.65</pos>
    </text>
    <video ifSubset="gamelistArt:On" name="md_video">
      <!--
		<pos>0.0130208333 1</pos>
		-->
      <pos>0.1041666667 1</pos>
      <!-- <maxSize>0.9869791667 3</maxSize> -->
      <maxSize>1 3</maxSize>
      <zIndex>9</zIndex>
      <origin>0 1</origin>
      <delay ifSubset="gamelistVideoDelay:1 Second">1</delay>
      <delay ifSubset="gamelistVideoDelay:2 Seconds">2</delay>
      <delay ifSubset="gamelistVideoDelay:3 Seconds">3</delay>
      <delay ifSubset="gamelistVideoDelay:5 Seconds">5</delay>
      <delay ifSubset="gamelistVideoDelay:Video off">9999</delay>
      <showSnapshotDelay>true</showSnapshotDelay>
      <effect>none</effect>
      <loops>10</loops>
    </video>
  </view>
</theme>
